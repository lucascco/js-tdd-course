{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API.",
  "main": "./src/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha --require @babel/register tests/**/*.spec.js",
    "test:tdd": "./node_modules/.bin/mocha --require @babel/register tests/**/*.spec.js --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucascco/js-tdd-course/tree/spotify-wrapper"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Lucas C Correa <lucasccorrea@gmail.com> (https://github.com/lucascco)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucascco/js-tdd-course/issues"
  },
  "homepage": "https://github.com/lucascco/js-tdd-course#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "coffeescript": "^2.3.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.6",
    "sinon-chai": "^3.2.0"
  },
  "dependencies": {
    "node-fetch": "^2.2.0",
    "chai": "^4.1.2",
    "mocha": "^5.2.0"
  }
}
